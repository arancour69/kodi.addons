<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.hman" name="hman's Kodi Addons" version="1.0.0" provider-name="hman">
	<extension point="xbmc.addon.repository" name="hman's Kodi Addon Repository">
		<info compressed="false">http://rawgit.com/armando-basile/kodi.addons/master/addons.xml</info>
		<checksum>http://rawgit.com/armando-basile/kodi.addons/master/addons.xml.md5</checksum>
		<datadir zip="false">http://rawgit.com/armando-basile/kodi.addons/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">hman's Kodi Addon Repository</summary>
		<description lang="en">Download and install hman's addon repository</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.xmltv.updater" name="XMLTV Updater" version="0.1.1" provider-name="hman">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Updater XMLTV file</summary>
        <summary lang="it">Downloader per file XMLTV</summary>
        <description lang="en">Update XMLTV file from Rytec repo to use it to show EPG</description>
        <description lang="it">Aggiorna il file XMLTV , necessario per visualizzare la guida TV, dalla fonte Rytec</description>
        <license>GNU General Public License, v2</license>
        <language></language>
        <!-- <forum>http://forum.kodi.tv/showthread.php?tid=...</forum> -->
        <source>https://github.com/armando-basile/kodi.addons/plugin.program.xmltv.updater</source>
        <email>hmandevteam@gmail.com</email>
    </extension>
</addon>
</addons>
